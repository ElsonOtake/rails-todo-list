<!DOCTYPE html>
<html data-theme="light">
  <head>
    <title><%= content_for(:title) || t("app.title") %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="min-h-screen bg-gradient">
      <nav class="navbar">
        <div class="container">
          <div class="nav-content">
            <%= link_to root_path, class: "logo" do %>
              <svg class="logo-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
              </svg>
              <span class="logo-text"><%= t("app.name") %></span>
            <% end %>
            
            <div class="nav-links">
              <%= link_to t("nav.all_todos"), todos_path, class: "nav-link" %>
              
              <!-- Language Switcher -->
              <div class="language-switcher">
                <%= form_with url: switch_language_path, method: :post, local: true, class: "language-form" do |form| %>
                  <% if I18n.locale == :en %>
                    <%= form.button type: "submit", name: "locale", value: "ru", class: "language-btn", title: t("languages.russian") do %>
                      <svg class="flag-icon" viewBox="0 0 640 480" xmlns="http://www.w3.org/2000/svg">
                        <path fill="#fff" d="M0 0h640v160H0z"/>
                        <path fill="#0039a6" d="M0 160h640v160H0z"/>
                        <path fill="#d52b1e" d="M0 320h640v160H0z"/>
                      </svg>
                    <% end %>
                  <% else %>
                    <%= form.button type: "submit", name: "locale", value: "en", class: "language-btn", title: t("languages.english") do %>
                      <svg class="flag-icon" viewBox="0 0 640 480" xmlns="http://www.w3.org/2000/svg">
                        <path fill="#012169" d="M0 0h640v480H0z"/>
                        <path fill="#FFF" d="m75 0 244 181L562 0h78v62L400 241l240 178v61h-80L320 301 81 480H0v-60l239-178L0 64V0h75z"/>
                        <path fill="#C8102E" d="m424 281 216 159v40L369 281h55zm-184 20 6 35L54 480H0l246-179zM640 0v3L391 191l2-44L590 0h50zM0 0l239 176h-60L0 42V0z"/>
                        <path fill="#FFF" d="M241 0v480h160V0H241zM0 160v160h640V160H0z"/>
                        <path fill="#C8102E" d="M0 193v96h640v-96H0zM273 0v480h96V0h-96z"/>
                      </svg>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
              
              <!-- Dark Mode Toggle -->
              <button class="theme-toggle" data-controller="theme" data-action="click->theme#toggle" title="<%= t('nav.toggle_dark_mode') %>">
                <svg class="moon-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
                </svg>
                <svg class="sun-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
              </button>
              
              <%= link_to new_todo_path, class: "btn-primary" do %>
                <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                <%= t("nav.new_todo") %>
              <% end %>
            </div>
          </div>
        </div>
      </nav>

      <main class="main-content">
        <div class="container">
          <% if notice.present? %>
            <div class="alert alert-success" data-turbo-temporary>
              <%= notice %>
            </div>
          <% end %>
          
          <% if alert.present? %>
            <div class="alert alert-error" data-turbo-temporary>
              <%= alert %>
            </div>
          <% end %>

          <%= yield %>
        </div>
      </main>

      <footer class="footer">
        <div class="container">
          <p><%= t("app.footer", year: Date.current.year).html_safe %></p>
        </div>
      </footer>
    </div>
  </body>
</html>