<!DOCTYPE html>
<html data-theme="light">
  <head>
    <title><%= content_for(:title) || "#{t('app.name')} - #{t('app.tagline')}" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="min-h-screen bg-gradient">
      <nav class="navbar">
        <div class="container">
          <div class="nav-content">
            <%= link_to root_path, class: "logo" do %>
              <svg class="logo-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
              </svg>
              <span class="logo-text"><%= t("app.name") %></span>
            <% end %>
            
            <div class="nav-links">
              <%= link_to t("navigation.all_todos"), todos_path, class: "nav-link" %>
              
              <!-- Language Selector -->
              <div class="language-selector" data-controller="language">
                <button class="language-toggle" data-action="click->language#toggle" title="<%= t('navigation.language_selection') %>">
                  <% if I18n.locale == :ja %>
                    <!-- Japanese Flag -->
                    <svg class="flag-icon" viewBox="0 0 3 2">
                      <rect width="3" height="2" fill="#ffffff"/>
                      <circle cx="1.5" cy="1" r="0.6" fill="#BC002D"/>
                    </svg>
                  <% elsif I18n.locale == :pt %>
                    <!-- Portuguese Flag -->
                    <svg class="flag-icon" viewBox="0 0 30 20">
                      <rect width="30" height="20" fill="#009739"/>
                      <path d="M12 10 L2 2 L2 18 Z" fill="#FEDE00"/>
                      <circle cx="12" cy="10" r="3.5" fill="#012169"/>
                      <path d="M12 6.5 A3.5 3.5 0 0 1 12 13.5 A3 3 0 0 0 12 6.5 Z" fill="#FEDE00"/>
                      <circle cx="12" cy="10" r="2.5" fill="transparent" stroke="#012169" stroke-width="0.5"/>
                    </svg>
                  <% else %>
                    <!-- British Flag -->
                    <svg class="flag-icon" viewBox="0 0 60 30">
                      <rect width="60" height="30" fill="#012169"/>
                      <path d="M0 0l60 30M60 0L0 30" stroke="#fff" stroke-width="6"/>
                      <path d="M0 0l60 30M60 0L0 30" stroke="#C8102E" stroke-width="4"/>
                      <path d="M30 0v30M0 15h60" stroke="#fff" stroke-width="10"/>
                      <path d="M30 0v30M0 15h60" stroke="#C8102E" stroke-width="6"/>
                    </svg>
                  <% end %>
                </button>
                
                <div class="language-dropdown" data-language-target="dropdown">
                  <%= link_to switch_language_path(:en), data: { "turbo-method": :patch, action: "click->language#selectLanguage" }, class: "language-option #{'active' if I18n.locale == :en}" do %>
                    <svg class="flag-icon" viewBox="0 0 60 30">
                      <rect width="60" height="30" fill="#012169"/>
                      <path d="M0 0l60 30M60 0L0 30" stroke="#fff" stroke-width="6"/>
                      <path d="M0 0l60 30M60 0L0 30" stroke="#C8102E" stroke-width="4"/>
                      <path d="M30 0v30M0 15h60" stroke="#fff" stroke-width="10"/>
                      <path d="M30 0v30M0 15h60" stroke="#C8102E" stroke-width="6"/>
                    </svg>
                    <span><%= t("language.english") %></span>
                  <% end %>
                  
                  <%= link_to switch_language_path(:ja), data: { "turbo-method": :patch, action: "click->language#selectLanguage" }, class: "language-option #{'active' if I18n.locale == :ja}" do %>
                    <svg class="flag-icon" viewBox="0 0 3 2">
                      <rect width="3" height="2" fill="#ffffff"/>
                      <circle cx="1.5" cy="1" r="0.6" fill="#BC002D"/>
                    </svg>
                    <span><%= t("language.japanese") %></span>
                  <% end %>

                  <%= link_to switch_language_path(:pt), data: { "turbo-method": :patch, action: "click->language#selectLanguage" }, class: "language-option #{'active' if I18n.locale == :pt}" do %>
                    <svg class="flag-icon" viewBox="0 0 30 20">
                      <rect width="30" height="20" fill="#009739"/>
                      <path d="M12 10 L2 2 L2 18 Z" fill="#FEDE00"/>
                      <circle cx="12" cy="10" r="3.5" fill="#012169"/>
                      <path d="M12 6.5 A3.5 3.5 0 0 1 12 13.5 A3 3 0 0 0 12 6.5 Z" fill="#FEDE00"/>
                      <circle cx="12" cy="10" r="2.5" fill="transparent" stroke="#012169" stroke-width="0.5"/>
                    </svg>
                    <span><%= t("language.portuguese") %></span>
                  <% end %>
                </div>
              </div>
              
              <!-- Dark Mode Toggle -->
              <button class="theme-toggle" data-controller="theme" data-action="click->theme#toggle" title="<%= t('navigation.toggle_dark_mode') %>">
                <svg class="moon-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
                </svg>
                <svg class="sun-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
              </button>
              
              <%= link_to new_todo_path, class: "btn-primary" do %>
                <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                <%= t("navigation.new_todo") %>
              <% end %>
            </div>
          </div>
        </div>
      </nav>

      <main class="main-content">
        <div class="container">
          <% if notice.present? %>
            <div class="alert alert-success" data-turbo-temporary>
              <%= notice %>
            </div>
          <% end %>
          
          <% if alert.present? %>
            <div class="alert alert-error" data-turbo-temporary>
              <%= alert %>
            </div>
          <% end %>

          <%= yield %>
        </div>
      </main>

      <footer class="footer">
        <div class="container">
          <p>&copy; <%= Date.current.year %> <%= t("app.footer") %></p>
        </div>
      </footer>
    </div>
  </body>
</html>