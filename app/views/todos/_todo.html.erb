<div id="<%= dom_id(todo) %>" class="todo-item <%= 'completed' if todo.completed? %> <%= 'overdue' if todo.overdue? %>">
  <div class="todo-checkbox">
    <%= button_to toggle_todo_path(todo), method: :patch, 
        form: { data: { turbo_frame: "_top" } },
        class: "checkbox-btn" do %>
      <% if todo.completed? %>
        <svg class="checkbox-icon checked" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
      <% else %>
        <svg class="checkbox-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <circle cx="12" cy="12" r="10" stroke-width="2"></circle>
        </svg>
      <% end %>
    <% end %>
  </div>

  <div class="todo-content">
    <div class="todo-header">
      <h3 class="todo-title"><%= todo.title %></h3>
      <div class="todo-badges">
        <% if todo.priority.present? %>
          <span class="badge badge-<%= todo.priority %>">
            <%= t("todos.priority.#{todo.priority}") %>
          </span>
        <% end %>
        
        <% if todo.due_date.present? %>
          <span class="badge <%= 'badge-danger' if todo.overdue? %>">
            <svg class="badge-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <%= todo.due_date.strftime("%b %d, %Y") %>
          </span>
        <% end %>
      </div>
    </div>
    
    <% if todo.description.present? %>
      <p class="todo-description"><%= todo.description %></p>
    <% end %>
  </div>

  <div class="todo-actions">
    <%= link_to edit_todo_path(todo), class: "action-btn", title: t("todos.actions.edit") do %>
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
      </svg>
    <% end %>
    
    <%= button_to todo_path(todo), method: :delete,
        form: { data: { turbo_confirm: t("Are you sure?") } },
        class: "action-btn action-btn-danger", title: t("todos.actions.delete") do %>
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
      </svg>
    <% end %>
  </div>
</div>