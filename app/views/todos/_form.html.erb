<%= form_with model: todo, class: "todo-form" do |form| %>
  <% if todo.errors.any? %>
    <div class="alert alert-error mb-4">
      <h4 class="alert-title">Please fix the following errors:</h4>
      <ul class="error-list">
        <% todo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, t("todos.form.title"), class: "form-label" %>
    <%= form.text_field :title, class: "form-input", placeholder: "#{t('todos.form.title')}...", autofocus: true %>
  </div>

  <div class="form-group">
    <%= form.label :description, t("todos.form.description"), class: "form-label" %>
    <%= form.text_area :description, class: "form-input", rows: 4, placeholder: "#{t('todos.form.description')} (optional)..." %>
  </div>

  <div class="form-row">
    <div class="form-group">
      <%= form.label :priority, t("todos.form.priority"), class: "form-label" %>
      <%= form.select :priority, 
          options_for_select([
            [t("todos.priority.low"), "low"],
            [t("todos.priority.medium"), "medium"],
            [t("todos.priority.high"), "high"]
          ], todo.priority),
          { include_blank: "#{t('todos.form.priority')}..." },
          class: "form-select" %>
    </div>

    <div class="form-group">
      <%= form.label :due_date, t("todos.form.due_date"), class: "form-label" %>
      <%= form.datetime_field :due_date, class: "form-input" %>
    </div>
  </div>

  <% if todo.persisted? %>
    <div class="form-group">
      <label class="checkbox-label">
        <%= form.check_box :completed, class: "form-checkbox" %>
        <span><%= t("todos.actions.complete") %></span>
      </label>
    </div>
  <% end %>

  <div class="form-actions">
    <%= form.submit todo.persisted? ? t("todos.form.update") : t("todos.form.create"), class: "btn-primary" %>
    <%= link_to t("todos.form.cancel"), todos_path, class: "btn-secondary" %>
  </div>
<% end %>