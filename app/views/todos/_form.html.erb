<%= form_with model: todo, class: "todo-form" do |form| %>
  <% if todo.errors.any? %>
    <div class="alert alert-error mb-4">
      <h4 class="alert-title">Please fix the following errors:</h4>
      <ul class="error-list">
        <% todo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, t("todos.title"), class: "form-label" %>
    <%= form.text_field :title, class: "form-input", placeholder: "Enter todo title...", autofocus: true %>
  </div>

  <div class="form-group">
    <%= form.label :description, t("todos.description"), class: "form-label" %>
    <%= form.text_area :description, class: "form-input", rows: 4, placeholder: "Add a description (optional)..." %>
  </div>

  <div class="form-row">
    <div class="form-group">
      <%= form.label :priority, t("todos.priority"), class: "form-label" %>
      <%= form.select :priority, 
          options_for_select([
            [t("priority.low"), "low"],
            [t("priority.medium"), "medium"],
            [t("priority.high"), "high"]
          ], todo.priority),
          { include_blank: "Select priority..." },
          class: "form-select" %>
    </div>

    <div class="form-group">
      <%= form.label :due_date, t("todos.due_date"), class: "form-label" %>
      <%= form.datetime_field :due_date, class: "form-input" %>
    </div>
  </div>

  <% if todo.persisted? %>
    <div class="form-group">
      <label class="checkbox-label">
        <%= form.check_box :completed, class: "form-checkbox" %>
        <span><%= t("todos.mark_complete") %></span>
      </label>
    </div>
  <% end %>

  <div class="form-actions">
    <%= form.submit t("actions.#{todo.persisted? ? 'update' : 'create'}"), class: "btn-primary" %>
    <%= link_to t("actions.cancel"), todos_path, class: "btn-secondary" %>
  </div>
<% end %>